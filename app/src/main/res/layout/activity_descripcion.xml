<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDC396"
    tools:context=".descripcion">
    <include layout="@layout/activity_encabezado" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="68dp"
        android:text="DESCRIPCIÓN DEL PROYECTO"
        android:textColor="#020202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="365dp"
        android:layout_height="182dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="148dp"
        android:text="Este proyecto está basado en la implementación de una app la cual va a servir como un salto al medio tecnológico de una cadena de comidas rápidas la cual va a brindar diferentes servicios como son reservas en una de sus sedes, platos a domicilio y encargos al por mayor, garantizando de esta manera que los usuarios puedan ordenar y organizar eventos desde la comodidad de su casa."
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="365dp"
        android:layout_height="182dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="428dp"
        android:text="Incorporar medios tecnológicos en el funcionamiento de una aplicación Android la cual pueda no solo estar disponible a todos los usuarios sino también ser funcional y a su vez, incorporar un toque hogareño en el corazón de los usuarios a la hora de utilizar este servicio, garantizando un incremento de clientes y manteniendo la importancia de esta cadena de comidas rápidas."
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textAlignment="center" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="368dp"
        android:text="ALCANCE DE LA APLICACIÓN"
        android:textColor="#020202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>